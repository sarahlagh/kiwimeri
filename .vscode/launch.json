{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web App",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8100",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Ionic Serve",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Vitest",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "vitest",
      "runtimeArgs": ["--ui", "unit"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Vitest e2e",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "vitest",
      "runtimeArgs": ["--ui", "e2e"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
